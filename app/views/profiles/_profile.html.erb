<div id="<%= dom_id profile %>" class="bg-gray-800 rounded-xl p-6 border border-gray-700 hover:border-pink-500/50 transition-colors">
  <div class="flex items-center mb-4">
    <div class="w-12 h-12 bg-black rounded-full flex items-center justify-center mr-4 border border-gray-600">
      <span class="text-white font-bold text-xs leading-none">Be<span class="text-pink-500">|</span>Known</span>
    </div>
    <h3 class="text-xl font-semibold text-white"><%= profile.name %></h3>
  </div>
  
  <div class="space-y-3">
    <div class="flex items-center text-gray-400 text-sm">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
      </svg>
      <span class="text-gray-300"><%= profile.email %></span>
    </div>
    
    <% if profile.youtube.present? %>
      <div class="flex items-center text-sm">
        <svg class="w-4 h-4 mr-2 text-red-400" fill="currentColor" viewBox="0 0 24 24">
          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
        </svg>
        <%= link_to profile.youtube, profile.youtube, target: "_blank", rel: "noopener noreferrer", class: "text-red-400 hover:text-red-300 transition-colors truncate" %>
      </div>
    <% end %>
    
    <% if profile.twitch.present? %>
      <div class="flex items-center text-sm">
        <svg class="w-4 h-4 mr-2 text-purple-400" fill="currentColor" viewBox="0 0 24 24">
          <path d="M11.64 5.93H13.07V10.21H11.64M15.57 5.93H17V10.21H15.57M7 2L3.43 5.57V18.43H7.71V22L11.29 18.43H14.14L20.57 12V2M19.14 11.29L16.29 14.14H13.43L11 16.57V14.14H7.71V3.43H19.14Z"/>
        </svg>
        <%= link_to profile.twitch, profile.twitch, target: "_blank", rel: "noopener noreferrer", class: "text-purple-400 hover:text-purple-300 transition-colors truncate" %>
      </div>
    <% end %>
    
    <% if profile.other.present? %>
      <div class="mt-4 p-3 bg-gray-700/50 rounded-lg">
        <p class="text-gray-300 text-sm leading-relaxed"><%= truncate(profile.other, length: 100) %></p>
      </div>
    <% end %>
  </div>
</div>
