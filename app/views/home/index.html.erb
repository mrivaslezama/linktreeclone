<!-- Hero Section -->
<section class="hero-gradient min-h-screen flex items-center justify-center pt-16">
  <div class="container mx-auto px-6 lg:px-12 py-20">
    <div class="text-center max-w-4xl mx-auto">
      <div class="mb-6">
        <span class="inline-block px-4 py-2 bg-pink-500/20 text-pink-400 rounded-full text-sm font-medium">
          ðŸš€ Expert Ruby on Rails Development
        </span>
      </div>
      
      <h1 class="text-4xl md:text-6xl font-bold leading-tight mb-6">
        Craft Exceptional 
        <span class="text-gradient">Rails Apps</span>
      </h1>
      
      <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
        Transform your ideas into powerful, scalable web applications with Be Known Spa's expert Ruby on Rails development services.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#contact" class="inline-flex items-center px-8 py-4 accent-gradient text-white font-semibold rounded-full hover:opacity-90 transition-opacity">
          Start Your Project
