</section>

<!-- Services Section -->
<section id="services" class="py-20 bg-gray-800">
  <div class="container mx-auto px-6 lg:px-12">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Our <span class="text-gradient">Services</span></h2>
      <p class="text-xl text-gray-400 max-w-3xl mx-auto">
        From MVP to enterprise-scale applications, we deliver comprehensive Ruby on Rails solutions that help your business grow.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Service 1 -->
      <div class="bg-gray-700 p-8 rounded-xl hover:bg-gray-600 transition-colors">
        <div class="w-12 h-12 bg-pink-500 rounded-lg flex items-center justify-center mb-6">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-4 text-white">Custom Rails Development</h3>
        <p class="text-gray-300">
          Build robust, scalable web applications from scratch using Ruby on Rails best practices and modern development patterns.
        </p>
      </div>
      
      <!-- Service 2 -->
      <div class="bg-gray-700 p-8 rounded-xl hover:bg-gray-600 transition-colors">
        <div class="w-12 h-12 bg-pink-500 rounded-lg flex items-center justify-center mb-6">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-4 text-white">API Development</h3>
        <p class="text-gray-300">
          Create powerful, RESTful APIs and microservices that integrate seamlessly with your existing infrastructure.
        </p>
      </div>
      
      <!-- Service 3 -->
      <div class="bg-gray-700 p-8 rounded-xl hover:bg-gray-600 transition-colors">
        <div class="w-12 h-12 bg-pink-500 rounded-lg flex items-center justify-center mb-6">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-4 text-white">Cloud Deployment</h3>
        <p class="text-gray-300">
          Deploy your Rails applications to AWS, Heroku, or any cloud platform with CI/CD pipelines and automated scaling.
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Portfolio Section -->
<section id="portfolio" class="py-20 bg-gray-900">
  <div class="container mx-auto px-6 lg:px-12">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Our <span class="text-gradient">Work</span></h2>
      <p class="text-xl text-gray-400 max-w-3xl mx-auto">
        Showcasing successful Rails applications and client profiles we've worked with.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Existing Profiles -->
      <% if @profiles&.any? %>
        <% @profiles.limit(6).each do |profile| %>
          <div class="bg-gray-700 rounded-xl overflow-hidden hover:bg-gray-600 transition-colors">
            <div class="h-48 bg-gradient-to-br from-pink-500 to-purple-600 flex items-center justify-center">
              <div class="text-center text-white">
                <div class="w-16 h-16 bg-black rounded-full flex items-center justify-center mb-4 mx-auto border border-white/20">
                  <span class="text-white font-bold text-xs leading-none">Be<span class="text-pink-300">|</span>Known</span>
                </div>
                <h4 class="text-xl font-semibold"><%= profile.name %></h4>
                <p class="text-pink-100 mt-2">Client Profile</p>
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-lg font-semibold mb-2 text-white"><%= profile.name %></h3>
              <p class="text-gray-300 text-sm mb-4">Email: <%= profile.email %></p>
              <div class="flex flex-wrap gap-2">
                <% if profile.youtube.present? %>
                  <span class="px-2 py-1 bg-red-500/20 text-red-400 text-xs rounded-full">YouTube</span>
                <% end %>
                <% if profile.twitch.present? %>
                  <span class="px-2 py-1 bg-purple-500/20 text-purple-400 text-xs rounded-full">Twitch</span>
                <% end %>
                <% if profile.other.present? %>
                  <span class="px-2 py-1 bg-blue-500/20 text-blue-400 text-xs rounded-full">Custom</span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <!-- Sample Projects -->
        <div class="bg-gray-700 rounded-xl overflow-hidden hover:bg-gray-600 transition-colors">
          <div class="h-48 bg-gradient-to-br from-pink-500 to-purple-600 flex items-center justify-center">
            <div class="text-center text-white">
              <h4 class="text-xl font-semibold">E-Commerce Platform</h4>
              <p class="text-pink-100 mt-2">Client Project</p>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-lg font-semibold mb-2 text-white">ShopCraft Pro</h3>
            <p class="text-gray-300 text-sm mb-4">Full-featured e-commerce platform with inventory management and payment processing.</p>
            <div class="flex flex-wrap gap-2">
              <span class="px-2 py-1 bg-pink-500/20 text-pink-400 text-xs rounded-full">Rails 7</span>
              <span class="px-2 py-1 bg-pink-500/20 text-pink-400 text-xs rounded-full">PostgreSQL</span>
            </div>
          </div>
        </div>
        
        <div class="bg-gray-700 rounded-xl overflow-hidden hover:bg-gray-600 transition-colors">
          <div class="h-48 bg-gradient-to-br from-blue-500 to-cyan-600 flex items-center justify-center">
            <div class="text-center text-white">
              <h4 class="text-xl font-semibold">SaaS Analytics</h4>
              <p class="text-blue-100 mt-2">Client Project</p>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-lg font-semibold mb-2 text-white">DataViz Suite</h3>
            <p class="text-gray-300 text-sm mb-4">Business intelligence platform with real-time data processing.</p>
            <div class="flex flex-wrap gap-2">
              <span class="px-2 py-1 bg-blue-500/20 text-blue-400 text-xs rounded-full">Rails API</span>
              <span class="px-2 py-1 bg-blue-500/20 text-blue-400 text-xs rounded-full">React</span>
            </div>
          </div>
        </div>
        
        <div class="bg-gray-700 rounded-xl overflow-hidden hover:bg-gray-600 transition-colors">
          <div class="h-48 bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center">
            <div class="text-center text-white">
              <h4 class="text-xl font-semibold">FinTech Platform</h4>
              <p class="text-green-100 mt-2">Client Project</p>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-lg font-semibold mb-2 text-white">PayFlow API</h3>
            <p class="text-gray-300 text-sm mb-4">Secure payment processing API with multi-currency support.</p>
            <div class="flex flex-wrap gap-2">
              <span class="px-2 py-1 bg-green-500/20 text-green-400 text-xs rounded-full">Rails API</span>
              <span class="px-2 py-1 bg-green-500/20 text-green-400 text-xs rounded-full">AWS</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="text-center mt-12">
      <%= link_to profiles_path, class: "inline-flex items-center px-8 py-4 bg-transparent border-2 border-pink-500 text-pink-500 font-semibold rounded-full hover:bg-pink-500 hover:text-white transition-colors" do %>
        View All Profiles
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      <% end %>
    </div>
  </div>
</section>

<!-- Contact Section -->
<section id="contact" class="py-20 hero-gradient">
  <div class="container mx-auto px-6 lg:px-12">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">Let's Build Something <span class="text-gradient">Amazing</span></h2>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Ready to transform your ideas into a powerful Rails application? Get in touch with Be Known Spa.
      </p>
    </div>
    
    <div class="max-w-2xl mx-auto">
      <div class="bg-gray-800 rounded-xl p-8">
        <h3 class="text-2xl font-semibold mb-6 text-white">Send us a message</h3>
        
        <%= form_with model: Profile.new, local: true, class: "space-y-6" do |form| %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= form.label :name, "Name", class: "block text-gray-300 font-medium mb-2" %>
              <%= form.text_field :name, class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-pink-500", required: true %>
            </div>
            <div>
              <%= form.label :email, "Email", class: "block text-gray-300 font-medium mb-2" %>
              <%= form.email_field :email, class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-pink-500", required: true %>
            </div>
          </div>
          
          <div>
            <%= form.label :youtube, "Website/Portfolio (optional)", class: "block text-gray-300 font-medium mb-2" %>
            <%= form.url_field :youtube, class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-pink-500", placeholder: "https://your-website.com" %>
          </div>
          
          <div>
            <%= form.label :twitch, "Social Media (optional)", class: "block text-gray-300 font-medium mb-2" %>
            <%= form.url_field :twitch, class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-pink-500", placeholder: "https://linkedin.com/in/yourprofile" %>
          </div>
          
          <div>
            <%= form.label :other, "Project Details", class: "block text-gray-300 font-medium mb-2" %>
            <%= form.text_area :other, rows: 4, class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-pink-500", placeholder: "Tell us about your project requirements, timeline, budget, and goals..." %>
          </div>
          
          <%= form.submit "Send Message", class: "w-full accent-gradient text-white font-semibold py-4 px-8 rounded-full hover:opacity-90 transition-opacity cursor-pointer" %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Footer -->
<footer class="bg-gray-900 border-t border-gray-800 py-8">
  <div class="container mx-auto px-6 lg:px-12">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="flex items-center space-x-3 mb-4 md:mb-0">
        <div class="w-10 h-10 bg-black rounded-full flex items-center justify-center border border-gray-600">
          <span class="text-white font-bold text-xs leading-none">Be<span class="text-pink-500">|</span>Known</span>
        </div>
        <span class="text-xl font-bold text-white">Be Known Spa</span>
      </div>
      <div class="text-gray-400 text-sm">
        &copy; <%= Date.current.year %> Be Known Spa. Expert Ruby on Rails Development.
      </div>
    </div>
  </div>
</footer>